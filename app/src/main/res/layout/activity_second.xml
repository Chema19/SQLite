<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SecondActivity">


    <TextView
        android:id="@+id/titleEntrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOMBRE DE LA ENTREGRA"
        android:textSize="30dp"
        android:layout_margin="10dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/puntajeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RANKING"
        android:layout_margin="20dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/titleEntrega"/>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        android:layout_margin="20dp"
        tools:ignore="MissingConstraints"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/puntajeEditText"/>



</androidx.constraintlayout.widget.ConstraintLayout>